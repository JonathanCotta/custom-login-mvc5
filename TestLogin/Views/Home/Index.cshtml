@model TestLogin.Models.User
@{
    ViewBag.Title = "Home Page";
}
<br>  
<div class="row">
    <div class="col-sm-offset-1 col-sm-4">
        <h3>Login</h3>
    </div>
</div>
<br>
@using (Ajax.BeginForm("Login","Users", new AjaxOptions { HttpMethod = "PostBackOptions"}) )
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                @Html.Label("Name" , htmlAttributes: new { @class="col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.UserName,"" ,htmlAttributes: new { @class="col-sm-10 form-control"})
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class="col-sm-10 form-control" , @maxlength="12"})
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class="text-danger"})
                </div>
            </div>
        </div>
        <div class="row">
            <br>
                <div class="col-sm-offset-1 col-sm-11">
                    <input type="submit" value="Login" class="btn btn-default"/>
                    @Html.ActionLink("Register", "Register", "Users","" ,htmlAttributes: new { @class = "btn btn-default" })                    
                </div>          
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}